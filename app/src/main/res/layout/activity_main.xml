<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MainActivity"
    android:background="@drawable/pantalla_principal">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="#6A000000">

    </LinearLayout>
    <TableLayout
        android:layout_width="409dp"
        android:layout_height="729dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        android:paddingTop="100dp">

        <TableRow
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <ImageButton
                android:id="@+id/imageButton"
                android:layout_width="80dp"
                android:layout_height="110dp"
                android:layout_weight="1"
                android:background="#00000000"
                android:onClick="imc"
                android:scaleType="centerInside"
                android:src="@drawable/imc" />

            <ImageButton
                android:id="@+id/imageButton2"
                android:layout_width="80dp"
                android:layout_height="110dp"
                android:layout_weight="1"
                android:background="#00000000"
                android:onClick="sueldo"
                android:scaleType="centerInside"
                android:src="@drawable/sueldo" />
        </TableRow>

        <TableRow
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:padding="5dp">

            <ImageButton
                android:id="@+id/imageButton3"
                android:layout_width="80dp"
                android:layout_height="110dp"
                android:layout_weight="1"
                android:background="#00000000"
                android:onClick="reproductor"
                android:scaleType="centerInside"
                android:src="@drawable/reproductor" />

            <ImageButton
                android:id="@+id/imageButton4"
                android:layout_width="80dp"
                android:layout_height="110dp"
                android:layout_weight="1"
                android:background="#00000000"
                android:onClick="webview"
                android:scaleType="centerInside"
                android:src="@drawable/webview" />
        </TableRow>

        <TableRow
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <ImageButton
                android:id="@+id/imageButton5"
                android:layout_width="80dp"
                android:layout_height="110dp"
                android:layout_weight="1"
                android:background="#00000000"
                android:onClick="calculadora_spinner"
                android:scaleType="centerInside"
                android:src="@drawable/calculadora" />

            <ImageButton
                android:id="@+id/imageButton6"
                android:layout_width="80dp"
                android:layout_height="110dp"
                android:layout_weight="1"
                android:background="#00000000"
                android:onClick="tienda"
                android:scaleType="centerInside"
                android:src="@drawable/tienda" />
        </TableRow>

        <TableRow
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <ImageButton
                android:id="@+id/imageButton7"
                android:layout_width="80dp"
                android:layout_height="110dp"
                android:layout_weight="1"
                android:background="#00000000"
                android:onClick="reproductor_mp3"
                android:scaleType="centerInside"
                android:src="@drawable/reproductor_mp3" />

            <ImageButton
                android:id="@+id/imageButton8"
                android:layout_width="80dp"
                android:layout_height="110dp"
                android:layout_weight="1"
                android:background="#00000000"
                android:onClick="linterna"
                android:scaleType="centerInside"
                android:src="@drawable/linterna" />

        </TableRow>

        <TableRow
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <ImageButton
                android:id="@+id/imageButton9"
                android:layout_width="80dp"
                android:layout_height="110dp"
                android:layout_weight="1"
                android:background="#00000000"
                android:onClick="reproductor_video"
                android:scaleType="centerInside"
                android:src="@drawable/reproductor_mp4" />
            <TextView android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_weight="1">
            </TextView>
        </TableRow>
    </TableLayout>

</androidx.constraintlayout.widget.ConstraintLayout>